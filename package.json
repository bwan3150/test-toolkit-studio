{
  "name": "test-toolkit-studio",
  "version": "0.1.0",
  "description": "A cross-platform IDE for UI automation testing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "testing",
    "automation"
  ],
  "author": "Eric Konec",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.6.2",
    "csv-parse": "^5.5.3",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "app.testtoolkit.studio",
    "productName": "Toolkit Studio",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "resources/**/*"
    ],

    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/logo/toolkit_logo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "resources/darwin",
          "to": "darwin",
          "filter": ["**/*"]
        }
      ]
    },

    "win": {
      "target": "nsis",
      "icon": "assets/logo/toolkit_logo.png",
      "extraResources": [
        {
          "from": "resources/win32",
          "to": "win32",
          "filter": ["**/*"]
        }
      ]
    },

    "linux": {
      "target": "AppImage",
      "icon": "assets/logo/toolkit_logo.png",
      "extraResources": [
        {
          "from": "resources/linux",
          "to": "linux",
          "filter": ["**/*"]
        }
      ]
    }
  }
}
