{
  "name": "test-toolkit-studio",
  "version": "0.5.2-beta.1",
  "description": "A cross-platform IDE for UI automation testing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "testing",
    "automation"
  ],
  "author": "Eric Konec",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "adb-qc": "^1.0.4",
    "axios": "^1.6.2",
    "csv-parse": "^5.5.3",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "iconv-lite": "^0.6.3",
    "jimp": "^1.6.0",
    "js-yaml": "^4.1.0",
    "qrcode": "^1.5.4"
  },
  "build": {
    "appId": "app.testtoolkit.studio",
    "productName": "Toolkit Studio",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "publish": [
      {
        "provider": "s3",
        "bucket": "toolkit-studio-updates",
        "region": "ap-southeast-2",
        "path": "/app"
      }
    ],
    "files": [
      "main.js",
      "package.json",
      "package-lock.json",
      "build/**/*",
      "assets/**/*",
      "renderer/**/*",
      "handlers/**/*",
      "!**/.DS_Store",
      "!**/Thumbs.db",
      "!**/*.log",
      "!**/*.md"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/logo/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "signIgnore": [
        "darwin/android-sdk"
      ],
      "identity": null,
      "asarUnpack": [
        "resources/darwin/**/*"
      ],
      "extraResources": [
        {
          "from": "resources/darwin",
          "to": "darwin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo/icon.ico",
      "asarUnpack": [
        "resources/win32/**/*"
      ],
      "extraResources": [
        {
          "from": "resources/win32",
          "to": "win32",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo/toolkit_logo.png",
      "asarUnpack": [
        "resources/linux/**/*"
      ],
      "extraResources": [
        {
          "from": "resources/linux",
          "to": "linux",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }
}
