{
  "name": "test-toolkit-studio",
  "version": "1.0.0",
  "description": "A cross-platform IDE for UI automation testing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "testing",
    "automation"
  ],
  "author": "Eric Wang",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.6.2",
    "csv-parse": "^5.5.3",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "app.testtoolkit.studio",
    "productName": "Test Toolkit Studio",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "android-sdk",
        "to": "android-sdk"
      }
    ]
  }
}
