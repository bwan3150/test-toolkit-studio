{
  "name": "test-toolkit-studio",
  "version": "1.0.0",
  "description": "A cross-platform IDE for UI automation testing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "testing",
    "automation"
  ],
  "author": "Eric Konec",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.6.2",
    "csv-parse": "^5.5.3",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "com.konec.testtoolkit",
    "productName": "Test Toolkit Studio",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/logo/toolkit_logo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo/toolkit_logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo/toolkit_logo.png"
    },
    "extraResources": [
      {
        "from": "resources/darwin",
        "to": "darwin",
        "filter": ["**/*"]
      },
      {
        "from": "resources/win32",
        "to": "win32",
        "filter": ["**/*"]
      },
      {
        "from": "resources/linux",
        "to": "linux",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "resources/**/*"
    ]
  }
}
