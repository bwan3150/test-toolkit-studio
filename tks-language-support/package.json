{
  "name": "tks-language-support",
  "displayName": "ToolkitScript Language Support",
  "description": "ToolkitScript (.tks) 语法高亮支持 - 适用于 VSCode 和 Web 编辑器",
  "version": "1.0.0",
  "publisher": "toolkit-studio",
  "author": "Toolkit Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/test-toolkit-studio"
  },
  "engines": {
    "vscode": "^1.60.0",
    "node": ">=14.0.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "tks",
    "toolkitscript",
    "automation",
    "testing",
    "syntax highlighting"
  ],
  "main": "./src/index.js",
  "icon": "icons/tks-icon.png",
  "contributes": {
    "languages": [
      {
        "id": "tks",
        "aliases": [
          "ToolkitScript",
          "tks"
        ],
        "extensions": [
          ".tks"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/tks-icon.png",
          "dark": "./icons/tks-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "tks",
        "scopeName": "source.tks",
        "path": "./grammars/tks.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "echo 'No build step required'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "vsce": "^2.15.0"
  }
}
